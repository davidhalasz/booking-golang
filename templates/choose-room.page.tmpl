{{template "base" .}}

{{define "content"}}
<div class="container min-h-screen mx-auto py-10">
    <div class="flex flex-col">
        <p class="text-5xl font-bold">Choose a Room</p>

        {{$rooms := index .Data "rooms"}}

        <ul>
            {{range $rooms}}
                <li>
                    <a href="/choose-room/{{.ID}}">{{.RoomName}}</a>
                </li>
            {{end}}
        </ul>
        
    </div>
</div>
{{end}}